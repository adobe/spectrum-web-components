{
    "compilerOptions": {
        "allowImportingTsExtensions": false,
        "composite": true,
        "noEmit": false,
        "outDir": "./dist",
        "paths": {
            "@adobe/spectrum-wc/*": ["./components/*"],
            "@spectrum-web-components/core/*": ["../core/*"]
        },
        "rootDir": "./",
        "types": ["@vitest/browser/providers/playwright"]
    },
    "exclude": ["node_modules", "dist"],
    "extends": "../../tsconfig.json",
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "vite-env.d.ts",
        ".storybook/storybook-env.d.ts"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}
