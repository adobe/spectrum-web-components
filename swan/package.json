{
  "name": "@spectrum-web-components/swan",
  "version": "0.1.0",
  "description": "Next generation Spectrum Web Components built with modern web standards",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build && tsc --build",
    "build:watch": "vite build --watch --mode development && tsc --build tsconfig.dev.json --watch",
    "dev": "vite serve demo --mode development",
    "preview": "vite preview demo",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-a11y": "^9.0.5",
    "@storybook/addon-docs": "^9.0.5",
    "@storybook/addon-vitest": "^9.0.5",
    "@storybook/web-components-vite": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/browser": "^3.2.2",
    "@vitest/coverage-v8": "^3.2.2",
    "@web/test-runner": "^0.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^9.0.5",
    "glob": "^11.0.2",
    "playwright": "^1.52.0",
    "prettier": "^3.0.0",
    "storybook": "^9.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^3.2.2"
  },
  "keywords": [
    "web-components",
    "lit",
    "spectrum",
    "design-system",
    "ui-components"
  ],
  "author": "Adobe",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-web-components.git",
    "directory": "swan"
  },
  "packageManager": "yarn@4.0.0"
}
