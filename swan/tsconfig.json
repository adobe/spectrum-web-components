{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "module": "ES2020",
        "target": "ES2020",
        "emitDeclarationOnly": false,
        "typeRoots": ["./src/types", "../node_modules/@types"]
    },
    "include": ["src/**/*.ts", "src/types/global.d.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
