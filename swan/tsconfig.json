{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": false,
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "../core/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../core/src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}