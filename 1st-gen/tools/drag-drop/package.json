{
    "name": "@spectrum-web-components/drag-drop",
    "version": "0.1.0",
    "description": "Headless drag-and-drop controllers and mixins for Spectrum Web Components",
    "license": "Apache-2.0",
    "repository": {
        "directory": "tools/drag-drop",
        "type": "git",
        "url": "https://github.com/adobe/spectrum-web-components.git"
    },
    "type": "module",
    "exports": {
