#switch:before {
    /* This rule includes all of the transitions from spectrum-css before we removed the package as a dependency
     * except the one for the transform attribute, which causes issue in Edge.
     */
    transition:
        background var(--spectrum-animation-duration-100, 0.13s) ease-in-out,
        border var(--spectrum-animation-duration-100, 0.13s) ease-in-out,
        box-shadow var(--spectrum-animation-duration-100, 0.13s) ease-in-out;
}
