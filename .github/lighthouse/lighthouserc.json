{
    "ci": {
        "collect": {
            "settings": {
                "onlyCategories": ["performance", "accessibility"],
                "onlyAudits": ["dom-size"]
            }
        },
        "assert": {
            "preset": "lighthouse:recommended",
            "assertions": {
                "categories:performance": ["warn", { "minScore": 0.9 }],
                "categories:accessibility": ["warn", { "minScore": 1 }]
            }
        }
    }
}
