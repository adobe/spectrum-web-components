        "outDir": "../",
        "types": ["mocha", "chai", "sinon", "webpack-env", "node"],
        "emitDeclarationOnly": false,
        "declaration": false
    },
    "include": [
        "../packages/**/*.ts",
        "../packages/*/stories/*.ts",
