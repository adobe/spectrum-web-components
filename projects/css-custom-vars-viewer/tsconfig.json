{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["es2017", "dom"],
        "strict": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "inlineSources": true,
        "rootDir": "./",
        "declaration": true,
        "incremental": true
    },
    "include": ["**/*.ts"]
}
