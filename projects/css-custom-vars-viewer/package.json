{
    "name": "@spectrum-web-components/custom-vars-viewer",
    "version": "0.41.0",
    "private": "true",
    "description": "Demo app created with Spectrum Web Components, following open-wc guidelines",
    "license": "Apache-2.0",
    "author": "najikahalsema",
    "main": "dist/src/index.js",
    "module": "dist/src/index.js",
    "type": "module",
    "exports": {
        ".": "./dist/src/index.js",
        "./sp-css-table.js": "./dist/src/sp-css-table.js",
        "./custom-vars-viewer.js": "./dist/src/custom-vars-viewer.js"
    },
    "engines": {
        "node": ">=16.14.2",
        "yarn": ">=1.16.0"
    },
    "scripts": {
        "analyze": "cem analyze --litelement",
        "build": "yarn parse-json && tsc && npm run analyze -- --exclude dist",
        "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
        "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
        "parse-json": "node ./scripts/parse-json.js",
        "prepublish": "tsc && npm run analyze -- --exclude dist",
        "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
        "storybook": "tsc && npm run analyze -- --exclude dist && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"storybook dev -p 8080 -c .storybook\"",
        "storybook:build": "tsc && npm run analyze -- --exclude dist && build-storybook",
        "test": "tsc && wtr --coverage",
        "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\""
    },
    "dependencies": {
        "@rollup/plugin-json": "^6.0.1",
        "@spectrum-web-components/base": "^0.41.0",
        "@spectrum-web-components/field-label": "^0.41.0",
        "@spectrum-web-components/link": "^0.41.0",
        "@spectrum-web-components/menu": "^0.41.0",
        "@spectrum-web-components/picker": "^0.41.0",
        "@spectrum-web-components/story-decorator": "^0.41.0",
        "@spectrum-web-components/styles": "^0.41.0",
        "@spectrum-web-components/swatch": "^0.41.0",
        "@spectrum-web-components/table": "^0.41.0",
        "@spectrum-web-components/theme": "^0.41.0",
        "@spectrum-web-components/toast": "^0.41.0",
        "@web/dev-server-rollup": "^0.6.1",
        "lit": "^2.5.0"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.9.0",
        "@open-wc/eslint-config": "^12.0.0",
        "@open-wc/testing": "^3.2.0",
        "@storybook/addon-a11y": "^7.5.0",
        "@storybook/addon-essentials": "^7.5.0",
        "@storybook/addon-links": "^7.5.0",
        "@storybook/web-components": "^7.5.0",
        "@typescript-eslint/eslint-plugin": "^5.35.0",
        "@typescript-eslint/parser": "^5.35.0",
        "@web/dev-server": "^0.4.1",
        "@web/storybook-builder": "^0.1.5",
        "@web/storybook-framework-web-components": "^0.1.1",
        "@web/test-runner": "^0.18.0",
        "concurrently": "^5.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "storybook": "^7.5.0",
        "tslib": "^2.3.1",
        "typescript": "^4.7.2"
    },
    "customElements": "custom-elements.json"
}
