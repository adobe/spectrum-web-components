{
    "name": "documentation",
    "version": "0.2.1",
    "private": true,
    "description": "The documentation site for Spectrum Web Components",
    "license": "Apache-2.0",
    "author": "",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "build": "yarn build:tsc && yarn build-search-index && yarn build:move-css && yarn build:eleventy && yarn build:postcss && yarn build:rollup",
        "build-search-index": "node scripts/build-search-index.js",
        "build:eleventy": "eleventy --config=.eleventy.cjs --incremental",
        "build:move-css": "cp src/components/*.css _site/src/components/",
        "build:postcss": "postcss src/components/{styles,fonts}.css -d _site/ --config src/postcss.config.cjs",
        "build:production": "SWC_DIR=spectrum-web-components yarn build",
        "build:rollup": "rollup -c rollup.config.js",
        "build:tsc": "tsc --build tsconfig.json",
        "copy-docs": "node scripts/copy-component-docs.js",
        "prebuild": "rimraf _site && mkdir -p _site/src/components && rimraf dist && mkdir dist && yarn copy-docs",
        "prewatch": "yarn build",
        "watch": "run-p 'build:tsc -w' 'build:eleventy --watch' watch:move-css build:postcss 'build:postcss --watch' 'build:rollup --watch' watch:serve",
        "watch:move-css": "yarn build:move-css && node scripts/watch-css.js",
        "watch:serve": "wds --root-dir=dist --watch"
    },
    "dependencies": {
        "@spectrum-css/table": "^4.0.8",
        "@spectrum-web-components/bundle": "^0.24.1"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.0",
        "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
        "@fullhuman/postcss-purgecss": "^4.1.3",
        "@open-wc/building-rollup": "^2.0.1",
        "@rollup/plugin-commonjs": "^21.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@types/lunr": "^2.3.3",
        "@types/prismjs": "^1.16.6",
        "@web/dev-server": "^0.1.25",
        "@web/rollup-plugin-copy": "^0.3.0",
        "@web/rollup-plugin-html": "^1.10.1",
        "alex": "^9.1.0",
        "lunr": "^2.3.9",
        "markdown-it-anchor": "^8.4.1",
        "postcss-cli": "^9.1.0",
        "posthtml": "^0.16.5",
        "posthtml-attrs-parser": "^0.1.1",
        "posthtml-match-helper": "^1.0.1",
        "posthtml-transform": "^1.0.10",
        "prismjs": "^1.26.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.56.2",
        "rollup-plugin-lit-css": "^3.0.2",
        "rollup-plugin-minify-html-literals": "^1.2.6",
        "rollup-plugin-styles": "^4.0.0",
        "rollup-plugin-visualizer": "^5.5.2",
        "rollup-plugin-workbox": "^6.2.0"
    },
    "sideEffects": [
        "_site/**/*.css",
        "_site/**/*.js",
        "_site/**/*.json",
        "src/**/*.css",
        "src/**/*.js"
    ]
}
