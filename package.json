{
    "private": true,
    "name": "@adobe/spectrum-web-components-monorepo",
    "version": "0.0.9",
    "description": "Spectrum Web Components monorepo supporting both current-gen and next-gen development approaches",
    "license": "Apache-2.0",
    "author": "Adobe",
    "homepage": "https://opensource.adobe.com/spectrum-web-components/",
    "repository": {
        "type": "git",
        "url": "https://github.com/adobe/spectrum-web-components.git"
    },
    "bugs": {
        "url": "https://github.com/adobe/spectrum-web-components/issues"
    },
    "type": "module",
    "scripts": {
        "build": "yarn workspace @adobe/spectrum-web-components build",
        "test": "yarn workspace @adobe/spectrum-web-components test",
        "start": "yarn workspace @adobe/spectrum-web-components storybook",
        "lint": "yarn workspace @adobe/spectrum-web-components lint",
        "postinstall": "husky || true && patch-package"
    },
    "workspaces": [
        "first-gen",
        "first-gen/packages/*",
        "first-gen/tools/*",
        "first-gen/linters/*",
        "second-gen",
        "second-gen/packages/*"
    ],
    "keywords": [
        "design-system",
        "spectrum",
        "adobe",
        "adobe-spectrum",
        "web components",
        "web-components",
        "lit-element",
        "lit-html"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.29.6",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "husky": "^9.0.10",
        "lint-staged": "^16.1.2",
        "patch-package": "^8.0.0",
        "replace-in-file": "^8.3.0"
    },
    "engines": {
        "node": ">=20",
        "yarn": ">=4.6.0"
    },
    "packageManager": "yarn@4.9.2"
}
