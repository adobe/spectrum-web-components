{
    "name": "spectrum-web-components-workspace",
    "private": true,
    "type": "module",
    "scripts": {
        "build:all": "yarn legacy:build && yarn next:build",
        "commitlint": "commitlint --config commitlint.config.cjs --edit",
        "install:all": "yarn install",
        "legacy:build": "yarn workspace legacy build",
        "legacy:storybook": "yarn workspace legacy storybook",
        "legacy:test": "yarn workspace legacy test",
        "next:build": "yarn workspace next build",
        "next:storybook": "yarn workspace next storybook",
        "next:test": "yarn workspace next test",
        "test:all": "yarn legacy:test && yarn next:test"
    },
    "workspaces": [
        "legacy",
        "next",
        "shared/*"
    ],
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "husky": "^9.0.10",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "typescript": "^5.3.3"
    },
    "license": "Apache-2.0",
    "author": "Adobe",
    "repository": {
        "type": "git",
        "url": "https://github.com/adobe/spectrum-web-components.git"
    },
    "bugs": {
        "url": "https://github.com/adobe/spectrum-web-components/issues"
    },
    "keywords": [
        "design-system",
        "spectrum",
        "adobe",
        "adobe-spectrum",
        "web components",
        "web-components",
        "lit-element",
        "lit-html"
    ],
    "homepage": "https://opensource.adobe.com/spectrum-web-components/"
}
