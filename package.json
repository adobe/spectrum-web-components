        "merge2": "^1.2.3",
        "netlify-cli": "^2.62.0",
        "node-fetch": "^2.6.0",
        "npm-run-all": "^4.1.5",
        "pixelmatch": "^5.1.0",
        "playwright": "^1.7.1",
