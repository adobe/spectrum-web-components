        "@typescript-eslint/eslint-plugin": "^2.3.0",
        "@typescript-eslint/parser": "^2.4.0",
        "@vaadin/router": "^1.2.0",
        "@webcomponents/webcomponentsjs": "^2.2.0",
        "babel-loader": "^8.0.5",
        "babel-plugin-bundled-import-meta": "^0.3.1",
        "browser-sync": "^2.26.7",
