{
    "name": "spectrum-web-components-workspace",
    "private": true,
    "type": "module",
    "scripts": {
        "build:all": "yarn legacy:build && yarn next:build",
        "install:all": "yarn install",
        "legacy:build": "yarn workspace legacy build",
        "legacy:storybook": "yarn workspace legacy storybook",
        "legacy:test": "yarn workspace legacy test",
        "next:build": "yarn workspace next build",
        "next:storybook": "yarn workspace next storybook",
        "next:test": "yarn workspace next test",
        "test:all": "yarn legacy:test && yarn next:test"
    },
    "workspaces": [
        "legacy",
        "next",
        "shared/*"
    ],
    "devDependencies": {
        "husky": "^9.0.10",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "typescript": "^5.3.3"
    }
}
