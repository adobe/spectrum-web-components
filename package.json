        "gulp-sourcemaps": "^2.6.5",
        "gulp-tap": "^2.0.0",
        "gulp-typescript": "^5.0.0",
        "gulp-wrap": "^0.15.0",
        "html-loader": "^1.3.0",
        "husky": "^4.2.1",
        "lerna": "^3.20.2",
        "linebyline": "^1.3.0",
