        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-lit-a11y": "^1.0.0",
        "eslint-plugin-notice": "^0.9.10",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-spectrum-web-components": "file:./linters/eslint",
        "express": "^4.16.4",
        "extract-loader": "^5.0.1",
        "fs-extra": "^9.0.0",
        "gh-pages": "^3.1.0",
        "globby": "^10.0.1",
        "gulp": "^4.0.0",
