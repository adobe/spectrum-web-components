{
    "version": "0.0.9",
    "private": true,
    "description": "Spectrum Web Components are a set of reusable, accessible, and customizable web components following the design language of Adobe Spectrum.",
    "license": "Apache-2.0",
    "author": "Adobe",
    "homepage": "https://opensource.adobe.com/spectrum-web-components/",
    "repository": {
        "type": "git",
        "url": "https://github.com/adobe/spectrum-web-components.git"
    },
    "bugs": {
        "url": "https://github.com/adobe/spectrum-web-components/issues"
    },
    "type": "module",
    "scripts": {
        "build": "yarn build:second-gen && yarn build:first-gen ",
        "build:first-gen": "yarn workspace @spectrum-web-components/1st-gen build",
        "build:second-gen": "yarn workspace @spectrum-web-components/2nd-gen build",
        "lint": "yarn lint:first-gen && yarn lint:second-gen",
        "lint:first-gen": "yarn workspace @spectrum-web-components/1st-gen lint",
        "lint:second-gen": "yarn workspace @spectrum-web-components/2nd-gen lint",
        "postinstall": "husky || true && patch-package",
        "start": "yarn start:second-gen & yarn start:first-gen",
        "start:first-gen": "yarn workspace @spectrum-web-components/1st-gen start",
        "start:second-gen": "yarn workspace @spectrum-web-components/2nd-gen start",
        "test": "yarn test:first-gen & yarn test:second-gen",
        "test:first-gen": "yarn workspace @spectrum-web-components/1st-gen test",
        "test:second-gen": "yarn workspace @spectrum-web-components/2nd-gen test"
    },
    "workspaces": [
        "first-gen",
        "first-gen/packages/*",
        "first-gen/tools/*",
        "first-gen/linters/*",
        "second-gen",
        "second-gen/packages/*"
    ],
    "resolutions": {
        "playwright": "1.53.1"
    },
    "devDependencies": {
        "@changesets/cli": "2.29.7",
        "@commitlint/cli": "19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "husky": "9.1.7",
        "lint-staged": "^16.1.2",
        "patch-package": "^8.0.0",
        "replace-in-file": "^8.3.0"
    },
    "keywords": [
        "design-system",
        "spectrum",
        "adobe",
        "adobe-spectrum",
        "web components",
        "web-components",
        "lit-element",
        "lit-html"
    ],
    "engines": {
        "node": ">=20.10.0",
        "yarn": ">=4.6.0"
    },
    "packageManager": "yarn@4.9.2"
}
