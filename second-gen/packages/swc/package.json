{
    "name": "@swc/components",
    "version": "0.0.1",
    "description": "Spectrum Web Components 2nd generation - rendering implementations",
    "license": "Apache-2.0",
    "author": "Adobe",
    "homepage": "https://opensource.adobe.com/spectrum-web-components/",
    "repository": {
        "type": "git",
        "url": "https://github.com/adobe/spectrum-web-components.git",
        "directory": "second-gen/packages/swc"
    },
    "bugs": {
        "url": "https://github.com/adobe/spectrum-web-components/issues"
    },
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./*": {
            "types": "./dist/components/*/index.d.ts",
            "import": "./dist/components/*/index.js"
        },
        "./components/*": {
            "types": "./dist/components/*/index.d.ts",
            "import": "./dist/components/*/index.js"
        }
    },
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "vite build",
        "clean": "rimraf dist",
        "dev": "vite build --watch",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "analyze": "cem analyze --config cem.config.js",
        "storybook": "yarn analyze && storybook dev -p 6006",
        "storybook:build": "yarn analyze && storybook build",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@swc/core": "workspace:*",
        "lit": "^2.5.0 || ^3.1.3"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.10.2",
        "@custom-elements-manifest/analyzer": "^0.10.5",
        "@storybook/test-runner": "^0.23.0",
        "@storybook/web-components-vite": "9.1.3",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitest/ui": "^3.2.4",
        "autoprefixer": "^10.4.21",
        "glob": "^11.0.0",
        "playwright": "^1.55.0",
        "postcss": "^8.5.6",
        "postcss-preset-env": "^10.3.1",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "rimraf": "^6.0.1",
        "storybook": "^9.1.3",
        "typescript": "^5.3.3",
        "vite": "^7.1.3",
        "vite-plugin-dts": "^4.3.0",
        "vite-plugin-lit-css": "^2.2.1",
        "vitest": "^3.2.4"
    },
    "keywords": [
        "design-system",
        "spectrum",
        "adobe",
        "web components",
        "lit",
        "components"
    ],
    "engines": {
        "node": ">=20"
    },
    "customElements": ".storybook/custom-elements.json"
}
