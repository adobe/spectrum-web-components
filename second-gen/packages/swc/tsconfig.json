{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./",
        "composite": true,
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "paths": {
            "@swc/core/*": ["../core/*"]
        }
    },
    "include": ["**/*.ts", "vite-env.d.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.stories.ts"],
    "references": [
        {
            "path": "../core"
        }
    ]
}
