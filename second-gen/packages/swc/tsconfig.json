{
    "compilerOptions": {
        "allowImportingTsExtensions": false,
        "composite": true,
        "noEmit": false,
        "outDir": "./dist",
        "paths": {
            "@spectrum-web-components/components-next/*": ["./components/*"],
            "@spectrum-web-components/core-next/*": ["../core/*"]
        },
        "rootDir": "./",
        "types": ["@vitest/browser/providers/playwright"]
    },
    "exclude": ["node_modules", "dist"],
    "extends": "../../tsconfig.json",
    "include": ["**/*.ts", "vite-env.d.ts"],
    "references": [
        {
            "path": "../core"
        }
    ]
}
