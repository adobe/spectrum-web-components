{
    "packages": ["packages/*", "projects/*"],
    "ignoreChanges": [
        "packages/*/test/**",
        "packages/*/stories/**",
        "**/*.md",
        "**/tsconfig.json"
    ],
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "conventionalCommits": true
        }
    }
}
