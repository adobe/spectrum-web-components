{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "module": "esNext",
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "target": "es2017",
        "skipLibCheck": true,
        "types": [
            "mocha",
            "chai",
            "sinon",
            "karma-chai",
            "webpack-env",
            "storybook__addon-actions",
            "node"
        ],
        "lib": ["es2017", "dom", "dom.iterable"],
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./packages"
    },
    "include": ["./global.d.ts", "./packages/*/src/**/*.ts"]
}
