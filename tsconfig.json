{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "module": "esNext",
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "target": "es2017",
        "skipLibCheck": true,
        "types": [
            "mocha",
            "chai",
            "sinon",
            "karma-chai",
            "webpack-env",
            "storybook__addon-actions",
            "node"
        ],
        "typeRoots": ["./node_modules/@types", "./packages"],
        "lib": ["es2017", "dom", "dom.iterable"],
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@spectrum-web-components/*": ["./packages/*"]
        }
    },
    "include": ["./global.d.ts", "./packages/*/src/**/*.ts"]
}
