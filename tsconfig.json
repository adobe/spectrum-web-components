{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "module": "esNext",
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "target": "es2017",
        "skipLibCheck": true,
        "importHelpers": true,
        "types": ["chai", "sinon", "karma-chai", "webpack-env", "node"],
        "lib": ["es2017", "dom", "dom.iterable"],
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./packages"
    },
    "include": ["./global.d.ts"]
}
