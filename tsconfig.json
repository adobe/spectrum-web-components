{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "module": "esNext",
        "moduleResolution": "node",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "target": "es2017",
        "types": [
            "mocha",
            "chai",
            "sinon",
            "karma-chai",
            "webpack-env",
            "storybook__addon-actions"
        ],
        "typeRoots": ["./node_modules/@types"],
        "lib": ["es2017", "dom", "dom.iterable"],
        "outDir": "lib"
    },
    "include": [
        "./src/**/*.ts",
        "./documentation/**/*.ts",
        "./test/**/*.ts",
        "./.storybook/*.ts",
        "./stories/**/*.ts"
    ]
}
